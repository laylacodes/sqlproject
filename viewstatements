--view1
CLEAR COMPUTE
CLEAR BREAK
TTITLE OFF
SET FEEDBACK OFF
SET Pagesize 75
SET Linesize 100
CREATE VIEW View1 AS
SELECT Flight_NBR, 
       Flight_Date, 
       Capacity - COUNT(Cust_nbr) AS Seats_Available
FROM Reservation
  JOIN Sched_Flight using (Flight_NBR, Flight_Date)
JOIN Aircraft_Type using (Serial_nbr)
JOIN Aircraft_Data using (Type)
Group by Flight_NBR, Flight_date, capacity;

--view2
CREATE VIEW View2 AS
SELECT Dep_Aprt_Code, Flight_Nbr, Flight_Date, Cust_Nbr
FROM Sched_Flight
LEFT JOIN Reservation using (Flight_Nbr, Flight_Date)
JOIN Flight_Data using (Flight_Nbr);
Select * FROM View2;
